{% extends 'base.twig' %}

{% block title %}
    Главная
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card mt-3">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title">
                            Задачи
                        </h5>
                        <div class="card-toolbar d-flex align-items-center">
                            <a class="btn btn-primary" href="/create">Добавить задачу</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table table-responsive table-hover">
                            <thead>
                            <tr>
                                <th width="100px">
                                    <a href="{{ sorts.status.href }}">
                                        Статус
                                        {% if currentSort == 'status' %}
                                            {% if currentOrder == 'ASC' %}<i class="fa fa-angle-down"></i>{% else %}<i class="fa fa-angle-up"></i>{% endif %}
                                        {% endif %}
                                    </a>
                                </th>
                                <th width="200px">
                                    <a href="{{ sorts.name.href }}">
                                        Имя
                                        {% if currentSort == 'name' %}
                                            {% if currentOrder == 'ASC' %}<i class="fa fa-angle-down"></i>{% else %}<i class="fa fa-angle-up"></i>{% endif %}
                                        {% endif %}
                                    </a>
                                </th>
                                <th width="200px">
                                    <a href="{{ sorts.email.href }}">
                                        Email
                                        {% if currentSort == 'email' %}
                                            {% if currentOrder == 'ASC' %}<i class="fa fa-angle-down"></i>{% else %}<i class="fa fa-angle-up"></i>{% endif %}
                                        {% endif %}
                                    </a>
                                </th>
                                <th>
                                    Описание
                                </th>
                                {% if app.user %}
                                    <th class="text-end" width="100px">
                                        Действия
                                    </th>
                                {% endif %}
                            </tr>
                            </thead>
                            <tbody>
                            {% for task in tasks %}
                                <tr>
                                    <td class="position-relative">
                                        {% if task.status %}
                                            <i class="fa fa-check text-success"></i>
                                        {% else %}
                                            <i class="fa fa-times text-danger"></i>
                                        {% endif %}
                                    </td>
                                    <td>{{ task.name }}</td>
                                    <td>{{ task.email }}</td>
                                    <td>{% if task.isDescriptionModified %}<i class="fa fa-edit text-primary"></i>{% endif %} {{ task.description }}</td>
                                    {% if app.user %}
                                        <td class="text-end">
                                            <a href="/edit?id={{ task.id }}">Изменить</a>
                                        </td>
                                    {% endif %}
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        {% if maxPage > 1 %}
                            <nav>
                                <ul class="pagination">
                                    {% for i in pagination %}
                                        <li class="page-item {{ currentPage == i.value ? 'active' }}">
                                            <a class="page-link" href="{{ i.href }}">{{ i.value }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </nav>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}